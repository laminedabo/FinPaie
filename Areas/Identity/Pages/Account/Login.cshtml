@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<div class="container col-md-12">
    <div class="col-8 float-left"><img src="~/img/logo.png" /></div>
    <div class="col-md-4 float-right">
        
        <form id="account" method="post">
            <h4>Connectez vous.</h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.Email"></label>
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Password"></label>
                <input asp-for="Input.Password" class="form-control" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label asp-for="Input.RememberMe">
                        <input asp-for="Input.RememberMe" />
                        @Html.DisplayNameFor(m => m.Input.RememberMe)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Connexion</button>
            </div>
            <div class="form-group">
                <p>
                    <a class="btn btn-danger btn-sm" id="forgot-password" asp-page="./ForgotPassword">Mot de passe oublie ?</a>
                </p>
                @*<p>
                    <a class="btn btn-outline-primary" asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">S'enregistrer</a>
                </p>*@
            </div>
        </form>
        
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
